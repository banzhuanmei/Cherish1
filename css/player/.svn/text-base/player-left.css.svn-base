@charset "utf-8";
/* CSS Document */
*{margin:0;padding:0}
a{text-align:center;}
li{list-style:none;}

#listBox{width:240px;border:1px solid;background:#3E3C3D;position:relative;overflow:hidden;height:444px;overflow:hidden;}

#list{width:100%;background:#3E3C3D;position:absolute;left:0;top:0;}
#list h3{height:26px;width:230px;font-size:12px;}
#list h3 .left_text{height:100%;width:80px;display:inline-block;padding-left:20px;line-height:26px;color:#FF0;float:left;background:url(../../img/player/exclaim.gif) no-repeat 0 2px;}
#list h3 .right_text{height:100%;width:18px;float:right;display:inline-block;line-height:26px;font-size:20px;}
#list h3 .right_text a{color:#ccc;}


#list .scroll{width:10px; height:100%;_height:630px;position:absolute;right:0;top:0;background:#000;}
#list .bar{height:320px;width:8px;position:absolute;left:0;top:0;background:#403E3F;border:1px solid black;}


#list .p-history{width:230px;}
#list h4{font-size:12px;color:#C5E3FD;font-weight:normal;border-top:1px solid;}
#list h4 span{margin-left:6px;}
#list .dot{float:right;margin-right:6px;cursor:pointer;}

#list ul{border:1px solid black;}
#list li{width:100%;font-size:12px;text-align:left;border-bottom:1px solid;line-height:22px;background:#020A15;color:#C5E3FD;cursor:pointer}
#list ul .detail{height:126px;width:100%;background:#0C1828;display:none;}
#list ul .detail li{width:36px;height:22px;background:#142C50;border:0px solid;float:left;margin:4px;text-align:center;}
#list ul .on{display:block;}


#list .image{margin-top:40px;text-align:center;width:230px}
embed{  height:570px; width:790px; position: absolute;bottom:30;}

